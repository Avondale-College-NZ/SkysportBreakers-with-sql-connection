<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Skysport_Breakers</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />

    <style>
        /* Right-aligned section inside the top navigation */
        .topnav-right {
            float: right;
        }
    </style>
</head>
<body>
    <header>
        <!-- Navbar (sit on top) -->
        <div class="w3-top">
            <div class="w3-bar w3-white w3-card" id="myNavbar">
                <a href="@Url.Action("Index","Home")" class="w3-bar-item w3-button w3-wide">Skysport Breakers</a>
                <div class="topnav-right">
                    <a href="@Url.Action("TeamPage","Home")" " class="w3-bar-item w3-button">Team</a>
                    <a href="#work" class="w3-bar-item w3-button"><i class="fa fa-th"></i> Merchandise</a>
                    <a href="#pricing" class="w3-bar-item w3-button"><i class="fa fa-usd"></i> Tickets</a>
                    <a href="@Url.Action("ContactPage","Home")" class="w3-bar-item w3-button"><i class="fa fa-envelope"></i> Contact</a>
                    <a href="@Url.Action("Privacy","Home")" class="w3-bar-item w3-button"><i class="fa fa-lock"></i> Privacy</a>
                    <a href="@Url.Action("Login","Pages")" class="w3-bar-item w3-button"><i class="fa fa-user"></i> Login/Register</a>
                    <div>
                        <!--partial layout for logged in user-->
                        <partial name="_LoginPartial" />
                    </div>
                </div>
            </div>
        </div>
    </header>
    <br /><br /><br />
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <!-- Footer -->
    <footer class="w3-center w3-black w3-padding-64">
        <a href="#home" class="w3-button w3-light-grey"><i class="fa fa-arrow-up w3-margin-right"></i>To the top</a>
        <div class="w3-xlarge w3-section">
            <i class="fa fa-facebook-official w3-hover-opacity"></i>
            <i class="fa fa-instagram w3-hover-opacity"></i>
            <i class="fa fa-twitter w3-hover-opacity"></i>
            <i class="fa fa-twitch w3-hover-opacity"></i>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)


</body>
</html>


