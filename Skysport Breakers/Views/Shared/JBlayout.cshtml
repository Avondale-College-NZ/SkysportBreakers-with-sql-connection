<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Skysport_Breakers</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />

    <style>
        body {
            background-color: #0085bd;
        }

        h1, h2, h3, h4, h5, h6, ul{
            color:white;
        }

    </style>

</head>
<body>
    <header>
        <!-- Navbar (sit on top) -->
        <div class="w3-top">
            <div class="w3-bar w3-white w3-card" id="myNavbar">
                <a href="@Url.Action("JBhome","Home")" class="w3-bar-item w3-button w3-wide">Junior Breakers</a>
                <a href="#work" class="w3-bar-item w3-button"> Membership</a>
                <a href="#pricing" class="w3-bar-item w3-button"> Camps</a>
                <a href="@Url.Action("","")" class="w3-bar-item w3-button"> Saturday Skills</a>
                <a href="@Url.Action("Academy","Home")" class="w3-bar-item w3-button"> Academy</a>
                <a href="@Url.Action("","")" class="w3-bar-item w3-button">Leagues</a>
                <div class="w3-dropdown-hover w3-hide-small">
                    <button class="w3-button" title="Notifications"> More</button>
                    <div class="w3-dropdown-content w3-card-4 w3-bar-block">
                        <a href="@Url.Action("ContactPage","Home")" class="w3-bar-item w3-button">Contact us</a>
                        <a href="@Url.Action("Index","Home")" class="w3-bar-item w3-button">Skysport Breakers</a>
                        <a href="@Url.Action("","Home")" class="w3-bar-item w3-button">Sunday open gym</a>
                    </div>
                </div>
                <div>
                    <!--partial layout for logged in user-->
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </div>
    </header>
    <br /><br /><br /><br /><br><br>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <!-- Footer -->
    <footer class="w3-center w3-black w3-padding-64">
        <div class="w3-xlarge w3-section">
            <i class="fa fa-facebook-official w3-hover-opacity"></i>
            <i class="fa fa-instagram w3-hover-opacity"></i>
            <i class="fa fa-twitter w3-hover-opacity"></i>
            <i class="fa fa-twitch w3-hover-opacity"></i>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)


</body>
</html>
